page{
    background: #F7F7F7
}
.picker-view {
  width: 100%;
  display: flex;
  z-index:12;
  background-color: #fff;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  height: 40vh;
}

.picker-item {
  line-height: 70rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
  text-align: center;
}
.border{
    border-top: 2rpx solid #E1E9F0;
    width: 100%;
}
.box{
    padding-left: 30rpx;
    padding-right: 30rpx;
    background: #fff;
}
.bd{
    padding-top: 24rpx;
    padding-bottom: 24rpx;
    width: 100%;
    border-bottom: 2rpx solid #E1E9F0;
    font-size: 30rpx;
    color: #333;
}
.bd:last-child{
    border:none
}
.bd>text{
    display: inline-block;
    width: 120rpx;
}
.bd>input{
    font-size: 28rpx;
    color: #303133;
    display: inline-block;
    margin-left: 80rpx;
    vertical-align: -30%;
    width: 400rpx;
}
.bd>image{
    width: 40rpx;
    height: 40rpx;
    margin-left: 20rpx;
    vertical-align: -20%
}
.mr{
    margin-top: 34rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
}
.mr>image{
    width: 40rpx;
    height: 40rpx;
    margin-right: 16rpx;
    vertical-align: -28%;
}
.mr>text{
    font-size: 26rpx;
    color: #787B80;
}
.btn{
    width: 100%;
    padding-top: 22rpx;
    padding-bottom: 22rpx;
    background: #1878F5;
    border-radius: 8rpx;
    color: #fff;
    font-size: 32rpx;
    text-align: center;
    margin-top: 82rpx;
    font-weight: 700;
    line-height: 1.5;
}
.sjld{
    padding: 20rpx 30rpx;
    background: rgba(250,250,250,1);
    width:100%;
    margin-top:10rpx;
    color: #1878F5;
    font-size: 32rpx;
    /* box-shadow:0px 2rpx 0px 0px rgba(230,230,230,1); */
    border-bottom: 2rpx solid #E1E9F0;
}
.zzc{
    width: 100%;
    height: 1920rpx;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,.5)
}
.ts{
    position: fixed;
    width: 300rpx;
    height: 100rpx;
    top: 50%;
    left: 50%;
    background: rgba(0,0,0,.5);
    margin-top: -150rpx;
    margin-left: -150rpx;
    color: #fff;
    font-size: 30rpx;
    line-height: 100rpx;
    text-align: center;
    border-radius: 8rpx
}