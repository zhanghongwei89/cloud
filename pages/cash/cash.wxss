page{
    padding: 26rpx 30rpx;
    background: #F7F7F7
}
.h1{
    color: #484A4D;
    font-size: 30rpx;
    margin-bottom: 20rpx;
}
.address-box{
    width: 750rpx;
    /* height: 104rpx; */
    background: #fff;
    margin-left: -30rpx;
    padding-left: 30rpx;
    padding-right: 30rpx;
    margin-bottom: 40rpx;
}
.address-box>input{
    height: 100%;
    font-size: 32rpx;
    color: #303133;
    padding-top: 32rpx;
    padding-bottom: 32rpx;
}
.address-box>input:nth-child(1){
    border-bottom: 1rpx solid #F2F4F7;
}
.btb-box{
    width: 750rpx;
    height: 104rpx;
    background: #fff;
    margin-left: -30rpx;
    padding-left: 30rpx;
    margin-bottom: 12rpx;
    padding-top: 32rpx;
    padding-bottom: 32rpx;
}
.btb-box>image{
    width: 40rpx;
    height: 40rpx;
    margin-right: 8rpx;
}
.btb-box>input{
    display: inline-block;
    width: 80%;
    font-size: 32rpx;
    color: #303133;
}
.btb-box>text{
    font-size: 28rpx;
    color: #1878F5;
    vertical-align: 36%
}
.balance{
    display: flex;
    justify-content: space-between;
    color: #787B80;
    font-size: 28rpx;
    margin-bottom: 160rpx;
}
.btn{
    font-size: 28rpx;
    color: #fff;
    width:690rpx;
    height:88rpx;
    background:rgba(24,120,245,1);
    box-shadow:0px -1rpx 0px 0px rgba(230,230,230,1);
    border-radius:8rpx;
    line-height: 88rpx;
    text-align: center;
}