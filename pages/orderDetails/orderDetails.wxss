page{
    background: #F7F7F7;
}
.blue{
    background:linear-gradient(72deg,rgba(24,120,245,1) 0%,rgba(74,148,245,1) 100%);
    width: 100%;
    padding: 60rpx 30rpx;
}
.det{
    display: flex;
    justify-content: space-between
}
.det-l>image{
    width: 48rpx;
    height: 48rpx;
    margin-right: 20rpx;
    vertical-align: -30%
}
.det-l>text{
    color: #FFFFFF;
    font-size: 30rpx
}
.det-r>text{
    color: #fff;
    font-size: 28rpx;
}
.det-r .fm{
    font-size: 32rpx;
    font-weight: 700;
}
.kc-mess{
    padding: 24rpx 30rpx;
    border-bottom: 2rpx solid #F7F7F7;
    background: #fff;
    display: flex;
    justify-content: space-between
}
.kc-l{
    display: flex;
    justify-content: space-between
}
.kc-l>image{
    width: 48rpx;
    height: 48rpx;
    margin-right: 24rpx;
    margin-top: 14rpx;
}
.kc-lr>view:nth-child(1){
    color: #303133;
    font-size: 28rpx;
    margin-bottom: 4rpx;
}
.kc-lr>view:nth-child(2){
    color: #787B80;
    font-size: 24rpx;
}
.kc-r>image{
    width: 40rpx;
    height: 40rpx;
    vertical-align: -60%
}
.address{
    padding: 24rpx 30rpx;
    background: #fff;
    display: flex;
    justify-content: space-between
}
.add-l{
    width: 48rpx;
    height: 48rpx;
    margin-right: 24rpx;
    margin-top: 24rpx;
}
.add-r{
    width: 630rpx;
}
.add-r>view:nth-child(1){
    color: #303133;
    font-size: 28rpx;
    margin-bottom: 4rpx;
}
.add-r>view:nth-child(2){
    color: #787B80;
    font-size: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}
.cominfor{
    background: #fff;
    margin-top: 16rpx;
}
.com-tit{
    padding: 24rpx 30rpx;
    border-bottom: 2rpx solid #E6E6E6;
    color: #606366;
    font-size: 28rpx
}
.com-box{
    padding-left: 30rpx;
}
.com-warp{
    padding: 24rpx 30rpx 24rpx 0;
    display: flex;
    justify-content: space-between;
    border-bottom: 2rpx solid #E6E6E6;
}
.com-warp:last-child{
    border:none
}
.com-warpl{
    width: 180rpx;
    height: 180rpx;
    border-radius: 8rpx;
    margin-right: 28rpx;
}
.com-warpr{
    width: 482rpx;
    position: relative
}
.com-warpr>view:nth-child(1){
    color: #484A4D;
    font-size: 26rpx;
    margin-bottom: 8rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.com-warpr>view:nth-child(2){
    color: #A8ADB3;
    font-size: 24rpx
}
.com-warpr>view:nth-child(3){
    display: flex;
    justify-content: space-between
}
.com-warpr>view:nth-child(3){
    position: absolute;
    bottom: 0;
    width: 100%;
}
.com-warpr>view:nth-child(3)>view:nth-child(1){
    color: #5F6266;
    font-size: 28rpx
}
.com-warpr>view:nth-child(3)>view:nth-child(1)>text{
    font-size: 32rpx;
}
.com-warpr>view:nth-child(3)>view:nth-child(2){
    color: #484A4D;
    font-size: 24rpx;
    position: absolute;
    right: 0;
    bottom: 0;
}
.order-infor{
    margin-top: 16rpx;
    background: #fff;
}
.or-tit{
    color: #606366;
    font-size: 28rpx;
    padding: 24rpx 30rpx;
    border-bottom: 2rpx solid #E6E6E6;
}
.or-warp{
    padding: 24rpx 30rpx 4rpx;
}
.or-warp>view{
    display: flex;
    justify-content: space-between;
    margin-bottom: 20rpx;
}
.or-warp>view>view:nth-child(1){
    color: #909499;
    font-size: 26rpx;
}
.or-warp>view>view:nth-child(2){
    color: #606366;
    font-size: 28rpx;
}
.order-num{
    background: #fff;
    padding: 24rpx 30rpx 4rpx;
    margin-top: 16rpx;
}
.order-num>view{
    margin-bottom: 20rpx;
}
.order-num>view>view{
    display: inline-block;
}
.num{
    width: 120rpx;
    font-size: 24rpx;
    color: #909499;
    margin-right: 40rpx;
}
.number{
    color: #787B80;
    font-size: 24rpx
}
.copy{
    width:84rpx;
    height:44rpx;
    background:rgba(240,242,245,1);
    border-radius:22rpx;
    line-height: 44rpx;
    font-size: 22rpx;
    color: #606366;
    text-align: center;
    margin-left: 36rpx;
}
.zw{
    width: 100%;
    height: 140rpx;
}
.xf-bot{
    position: fixed;
    width: 100%;
    padding: 14rpx 30rpx 14rpx 32rpx;
    display: flex;
    justify-content: space-between;
    background: #fff;
    bottom: 0;
    left: 0;
    border-top: 2rpx solid #E6E6E6;
}
.xf-botl{
    padding-top: 10rpx;
}
.xf-botl>text:nth-child(1){
    color: #484A4D;
    font-size: 28rpx
}
.xf-botl>text:nth-child(2){
    color: #F54327;
    font-size: 32rpx;
    font-weight: 700;
}
.xf-botr>view{
    display: inline-block;
    width:140rpx;
    height:64rpx;
    border-radius:4rpx;
    text-align: center;
    line-height: 64rpx;
    font-size: 28rpx;
    color: #606366;
    border:2rpx solid rgba(192,197,204,1);
    margin-right: 24rpx;
}
.xf-botr>view:last-child{
    margin-right: 0
}
.xf-botr>.xf-blue{
    color: #fff;
    background: #1878F5;
    border:none
}