page{
    background: #F7F7F7
}
.border{
    border-top: 2rpx solid #E1E9F0;
}
.coll-box{
    background: #fff;
    padding-left: 30rpx;
}
.coll-warp{
    padding: 24rpx 30rpx 28rpx 0;
    border-bottom: 2rpx solid #E1E9F0;
    display: flex;
    justify-content: space-between
}
.coll-warp:last-child{
    border:none
}
.coll-wl>image{
    width:180rpx;
    height:180rpx;
    border-radius:4rpx;
}
.coll-wr{
    display: flex;
    flex-flow: column;
    justify-content: space-between;
    width: 482rpx;
}
.coll-tit{
    color: #484A4D;
    font-size: 26rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.jq{
    display: flex;
    justify-content: space-between
}
.coll-jq{
    color: #5F6266;
    font-size: 32rpx
}
.coll-jq>text{
    color: #5F6266;
    font-size: 28rpx
}
.coll-sj{
    color: #484A4D;
    font-size: 24rpx;
    padding-top: 6rpx;
}
.noll{
    text-align: center;
}
.noll>image{
    width: 240rpx;
    height: 240rpx;
    margin-bottom: 24rpx;
}
.noll>view{
    font-size: 28rpx;
    color: #A8ACB3;
}