page{
    background: #F7F7F7
}
.swiper-tab{
    padding: 22rpx 30rpx 0;
    border-bottom: 1px solid #D8DFE6;
    display: flex;
    justify-content: space-between;
    margin-bottom: 26rpx;
    background: #fff;
}
.swiper-tab-list{
    font-size: 30rpx;
    color: #909499;
}
.on{
    padding-bottom: 22rpx;
    color: #303133;
    border-bottom: 6rpx solid #1878F5;
}
.swiper-box{
    width: 100%;
}
.order-box{
    background: #fff;
    margin-bottom: 16rpx;
}
.order-top{
    padding: 24rpx 30rpx;
    border-bottom: 2rpx solid #E6E6E6;
    display: flex;
    justify-content: space-between
}
.ot-l{
    font-size: 26rpx;
    color: #909499
}
.ot-r{
    color: #F36D18;
    font-size: 28rpx;
    font-weight: 700
}
.order-warp{
    padding: 0rpx 0 26rpx 30rpx;
}
.nr{
    padding-top: 21rpx;
    padding-bottom: 24rpx;
    padding-right: 30rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 2rpx solid #E6E6E6;
}
.nr-l>image{
    width: 180rpx;
    height: 180rpx;
    border-radius: 8rpx
}
.nr-r{
    width: 482rpx;
    position: relative;
}
.nr-tit{
    color: #484A4D;
    font-size: 28rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.nr-r>.lx{
    font-size: 24rpx;
    color: #A8ADB3;
    margin-top: 8rpx;
}
.jq{
    position: absolute;
    bottom: 0;
    width: 100%;
}
.jq-l{
    color: #606366;
    font-size: 32rpx;
}
.jq-l>text{
    font-size: 28rpx
}
.jq-r{
    font-size: #484A4D;
    font-size: 24rpx;
    position: absolute;
    right: 0;
    top: 8rpx;
}
.order-bot{
    display: flex;
    justify-content: space-between;
    padding: 0 30rpx 32rpx;
}
.ob-l{
    color: #787B80;
    font-size: 26rpx;
}
.ob-l>text{
    color: #F54327;
    font-size: 32rpx;
    font-weight: 700;
}
.ob-r>view{
    display: inline-block;
    font-size: 26rpx;
    padding: 8rpx 26rpx;
    border-radius:8rpx;
    z-index: 999;
}
.ob-r>.or-ccc{
    border:2rpx solid rgba(192,197,204,1); 
    color: #606366;
    margin-right: 24rpx;
    /* display: none */
}
.ob-r>.or-blue{
    background: #1878F5;
    color: #fff;
}
.noll{
    text-align: center;
}
.noll>image{
    width: 240rpx;
    height: 240rpx;
    margin-bottom: 24rpx;
}
.noll>view{
    font-size: 28rpx;
    color: #A8ACB3;
}